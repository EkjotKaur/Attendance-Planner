<%- include('./partials/tope.ejs') %>

<div class="top-nav width d-flex align-item-center">
  <div class="container">
    <img src="/img/PRESENCE Bhavya.png" class="brand-img px-3" alt="">
  </div>
</div>

<div class="container top-setting justify-content-center">

  <div class="row justify-content-sm-between justify-content-center px-sm-3 ">
    <button class="btn btn-outline-dark mx-0 my-2 btn-create col-11 col-sm-5 col-md-4 col-lg-3 "><a
        href="/<%= presentClassId %>/<%= presentBatchId %>/newStudent">
        <h4><i class="fa fa-plus pr-1" aria-hidden="true"></i> Add Student</h4>
      </a></button>
    <button class="btn btn-outline-dark mx-0 my-2 btn-create col-11 col-sm-5 col-md-4 col-lg-3"><a href="/home">
        <h4><i class="fas fa-backward pr-1"></i> Go Back</h4>
      </a></button>
  </div>


  <div class="row justify-content-between my-3 text-light px-1 bg-dark boxes align-items-center mx-sm-0 mx-1">

    <div class="col-lg-5 bg-dark py-3 text-center">
      <div class="row align-items-center">
        <h4 class="col-sm-3 col-2"><i class="fas fa-calendar-day" style="font-size: 3rem;"></i></h4>
        <div class="col-sm-9 col-10">
          <div>
            <% if (studentList[0].branch=="CSE") { %>
            <h5>
              Branch: Computer Science <%= studentList[0].Shift %>, <%= studentList[0].year %>
            </h5>
            <% } %>
            <% if (studentList[0].branch=="IT") { %>
            <h5>
              Branch: Information Technology <%= studentList[0].Shift %>, <%= studentList[0].year %>
            </h5>
            <% } %>
            <% if (studentList[0].branch=="ECE") { %>
            <h5>
              Branch: Electronics And Communication <%= studentList[0].Shift %>, <%= studentList[0].year %>
            </h5>
            <% } %>
            <% if (studentList[0].branch=="EEE") { %>
            <h5>
              Branch: Electrical And Electronics <%= studentList[0].Shift %>, <%= studentList[0].year %>
            </h5>
            <% } %>

            <h5 class="" style="font-weight: 300;"><em> <%= TodayDate %></em> </h5>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4 bg-dark py-3 text-center">
      <div class="row flex-lg-row-reverse">
        <h3 class="col-sm-3 col-2"><i class="fas fa-user mr-lg-5" style="font-size: 3rem;"></i></h3>
        <div class="col-sm-9 col-10">
          <h5><%= name %></h5>
          <h5 style="font-weight: 300;"><%= username %></h5>
        </div>
      </div>

    </div>
  </div>
  <div class="alert alert-danger mx-0 row" style="border-radius: 0;" role="alert">
    <div>Dont't Forget To Submit The Form. Submits and updates the record ONCE a day</div>
    <div></div>
  </div>

  <form action="/<%= presentClassId %>/<%= presentBatchId %>/attendance" method="POST">
    <div class="bg-layout py-4 pl-lg-5">

      <% studentList.forEach(std => { %>
      <div class="row justify-content-between pr-3 pl-4 align-items-sm-start align-items-end">
        <div class="col-lg-9 col-7">


          <div class="row justify-content-start align-items-start">
            <div class="col-sm-9 col-12">
              <div class="mb-sm-5 row">
                <div class="col-lg-2 col-md-1 col-12 mt-sm-0 mt-5"><%= sno+1 %>. </div>
                <% sno+=1 %>
                <div class="col-lg-3 col-md-10 col-12"><%= std.enrollNo %> </div>
                <div class="col-lg-7 col-md-12 col-12"><%= std.name %> </div>
              </div>
            </div>
            <div class="col-sm-3 col-12">
              <div class="class">
                <div>
                  <select name="dd" class="custom-select" onchange=attendanceChangeHandler(event)>
                    <option value=0>Mark Attendance</option>
                    <option value=1>Present</option>
                    <option value=2>Absent</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-3 col-sm-2">
          <div class="">
            <button class="btn btn-dark text-light" data-toggle="tooltip" data-placement="bottom"
              title="Delete Student"><a
                href="/<%= presentClassId %>/<%= presentBatchId %>/<%= std.id %>/deleteStudent"><i
                  class="fas fa-trash-alt"></i></a></button>
          </div>
        </div>
      </div>
      <% }) %>

      <div class="pl-4">
        <button type="submit" class="btn btn-outline-info color-btn mr-3 my-4 my-md-0">Save Attendance</button>
        <button class="btn btn-dark text-light"><a href="/<%= presentClassId %>/<%= presentBatchId %>/record">View
            Record</a></button>
      </div>
    </div>

  </form>




  <div class="alert alert-danger mx-0 my-3" style="border-radius: 0;" role="alert">
    <div>Dont't Forget To Submit The Form. Submits and updates the record ONCE a day</div>
    <div></div>
  </div>
  <a id="back-to-top" href="#" class="btn btn-light btn-lg back-to-top" role="button"><i
      class="fas fa-chevron-up"></i></a>

</div>
<!-- Footer -->
<div class="foot bg-dark text-light p-3  text-center" style="bottom: 0;">
  <h5 class="m-0 pb-2">Made with ❤️ by Code Her Things </h5>
  <h6 class="m-0 py-1"><i class="fa fa-copyright pr-1"></i>2020 Copyright, Code Her Things.</h6>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  });



</script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
  integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>

</html>